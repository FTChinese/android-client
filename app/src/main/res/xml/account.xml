<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="账号">

        <Preference
            android:key="account_email"
            android:title="@string/prompt_email">
            <intent
                android:targetPackage="com.ft.ftchinese"
                android:targetClass="com.ft.ftchinese.ChangeEmailActivity" />
        </Preference>


        <Preference
            android:key="account_user_name"
            android:title="用户名">
            <intent
                android:targetPackage="com.ft.ftchinese"
                android:targetClass="com.ft.ftchinese.ChangeUsernameActivity" />
        </Preference>

        <Preference
            android:key="account_change_password"
            android:title="@string/prompt_password"
            android:summary="@string/title_change_password">

            <intent
                android:targetPackage="com.ft.ftchinese"
                android:targetClass="com.ft.ftchinese.ChangePasswordActivity" />
        </Preference>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="社交账号">

