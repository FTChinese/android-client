<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_title_storage">
        <Preference
            app:key="pref_clear_cache"
            app:title="@string/pref_clear_cache">
        </Preference>

        <Preference
            app:key="pref_clear_history"
            app:title="@string/pref_clear_history">
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            app:key="pref_version_name"
            app:title="@string/pref_version_name">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>