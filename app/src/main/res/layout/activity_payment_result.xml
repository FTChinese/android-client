<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pay.PaymentResultActivity">

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/invoice_number_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/outcome_invoice_number"
            android:textIsSelectable="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/plan_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/outcome_plan"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
            app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
            app:layout_constraintTop_toBottomOf="@id/invoice_number_tv"/>

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/period_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/outcome_period"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
            app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
            app:layout_constraintTop_toBottomOf="@id/plan_tv"/>

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/sub_status_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/outcome_sub_status"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
            app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
            app:layout_constraintTop_toBottomOf="@id/period_tv"/>

        <TextView
            style="@style/FTCTextCenter"
            android:id="@+id/payment_status_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/outcome_payment_status"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
            app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
            app:layout_constraintTop_toBottomOf="@id/sub_status_tv"/>

    <Button
        android:id="@+id/done_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
