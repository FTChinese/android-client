<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pay.StripeOutcomeFragment">

    <TextView
        style="@style/AppTextBody.Center"
        android:id="@+id/invoice_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/outcome_invoice_number"
        android:textIsSelectable="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/AppTextBody.Center"
        android:id="@+id/sub_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/outcome_sub_status"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
        app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
        app:layout_constraintTop_toBottomOf="@id/invoice_number_tv"/>

    <TextView
        style="@style/AppTextBody.Center"
        android:id="@+id/payment_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/outcome_payment_status"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
        app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
        app:layout_constraintTop_toBottomOf="@id/sub_status_tv"/>

    <TextView
        android:id="@+id/period_tv"
        style="@style/AppTextBody.Center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/outcome_period"
        app:layout_constraintEnd_toEndOf="@id/invoice_number_tv"
        app:layout_constraintStart_toStartOf="@id/invoice_number_tv"
        app:layout_constraintTop_toBottomOf="@id/payment_status_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
