<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    card_view:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/order_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="订单ID"
            android:textIsSelectable="true"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/tier_cycle_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="会员类型"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/order_id_tv"/>

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/duration_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="会员期限"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tier_cycle_tv"/>

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/net_price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/duration_tv"/>

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/pay_method_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/net_price_tv"/>

        <TextView
            style="@style/AppTextBody"
            android:id="@+id/created_at_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="创建时间"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/pay_method_tv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
