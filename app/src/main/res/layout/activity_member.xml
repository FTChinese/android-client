<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/simple_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/swipe_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="下拉更新会员信息"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/member_status_wrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/swipe_tip"
                app:layout_constraintEnd_toEndOf="@id/swipe_tip"
                app:layout_constraintTop_toBottomOf="@id/swipe_tip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member_tier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_member_tier"
                    style="@style/OrigamiText.ProductHeading1.Center"
                    android:textStyle="bold" />

                <TextView
                    style="@style/OrigamiText.Body1.Light.Center"
                    android:id="@+id/tv_expire_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/label_member_duration" />

                <TextView
                    style="@style/OrigamiText.Body1.Light.Center"
                    android:id="@+id/tv_sub_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/label_stripe_status"/>

                <TextView
                    style="@style/OrigamiText.Body1.Light.Center"
                    android:id="@+id/tv_auto_renewal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/auto_renewal"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resubscribe_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/member_resubs"
                app:layout_constraintStart_toStartOf="@id/member_status_wrapper"
                app:layout_constraintEnd_toEndOf="@+id/member_status_wrapper"
                app:layout_constraintTop_toBottomOf="@id/member_status_wrapper"/>

            <!-- Only show this button who is a member and will expire -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/renew_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/membership_renew"
                app:layout_constraintStart_toStartOf="@id/member_status_wrapper"
                app:layout_constraintEnd_toEndOf="@id/member_status_wrapper"
                app:layout_constraintTop_toBottomOf="@+id/resubscribe_btn"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upgrade_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/membership_upgrade"
                app:layout_constraintEnd_toEndOf="@+id/member_status_wrapper"
                app:layout_constraintStart_toStartOf="@+id/member_status_wrapper"
                app:layout_constraintTop_toBottomOf="@+id/renew_btn" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/progress_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>


