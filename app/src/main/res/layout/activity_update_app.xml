<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.settings.UpdateAppActivity">

    <data>
        <import type="android.view.View"/>
        <import type="com.ft.ftchinese.BuildConfig"/>
        <variable
            name="release"
            type="com.ft.ftchinese.model.AppRelease" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/simple_toolbar"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_current_version"
                    style="@style/OrigamiText.Body1.Light.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{@string/current_version(BuildConfig.VERSION_NAME)}" />

                <TextView
                    android:id="@+id/tv_latest_version"
                    style="@style/OrigamiText.Body1.Center"
                    android:textColor="@color/colorClaret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="@{release.isNew ? View.VISIBLE : View.GONE}"
                    android:text="@{@string/latest_version(release.versionName)}" />

                <TextView
                    android:id="@+id/tv_already_latest"
                    style="@style/OrigamiText.Body1.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="@{release.isCurrent ? View.VISIBLE : View.GONE}"
android:text="@string/already_latest_release"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="@{release.isNew ? View.VISIBLE : View.GONE}"
                    android:text="@string/btn_start_download" />

                <TextView
                    android:id="@+id/tv_release_time"
                    style="@style/OrigamiText.Body2.Light.Center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="@{release.createdAt != null ? View.VISIBLE : View.GONE}"
                    android:text="@{@string/released_at(release.creationTime)}" />

                <TextView
                    android:id="@+id/tv_release_log"
                    style="@style/OrigamiText.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="@{release != null ? View.VISIBLE : View.GONE}"
                    android:text="@{release.body}"/>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <include layout="@layout/progress_bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

