<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="loggedIn"
            type="Boolean" />
        <variable
            name="expiredWarning"
            type="String" />
        <variable
            name="premiumFirst"
            type="Boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pay.PaywallActivity">

        <include
            layout="@layout/simple_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/paywall_login_prompt"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="@{loggedIn ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@id/product_top"
                    app:layout_constraintEnd_toEndOf="@id/product_top"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/expired_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{expiredWarning}"
                    android:visibility="@{expiredWarning == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintStart_toStartOf="@id/product_top"
                    app:layout_constraintEnd_toEndOf="@id/product_top"
                    app:layout_constraintTop_toBottomOf="@id/login_button" />

                <TextView
                    android:id="@+id/premium_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/premium_only"
                    android:layout_marginTop="16dp"
                    android:visibility="@{premiumFirst ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="@id/product_top"
                    app:layout_constraintStart_toStartOf="@id/product_top"
                    app:layout_constraintTop_toBottomOf="@id/expired_guide" />

                <FrameLayout
                    android:id="@+id/product_top"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/premium_guide"/>

                <FrameLayout
                    android:id="@+id/product_bottom"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/product_top"
                    app:layout_constraintEnd_toEndOf="@id/product_top"
                    app:layout_constraintTop_toBottomOf="@+id/product_top"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <FrameLayout
                    android:id="@+id/frag_customer_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/product_bottom"
                    app:layout_constraintStart_toStartOf="@id/product_top"
                    app:layout_constraintEnd_toEndOf="@id/product_top"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/progress_bar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
