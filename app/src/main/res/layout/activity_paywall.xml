<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="premiumFirst"
            type="Boolean" />
        <variable
            name="promo"
            type="com.ft.ftchinese.ui.paywall.PromoUI" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.paywall.PaywallActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/simple_toolbar" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/swipe_refresh"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Account and membership status -->
                    <FrameLayout
                        android:id="@+id/subs_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintEnd_toEndOf="@id/product_top"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- Promotion box -->
                    <FrameLayout
                        android:id="@+id/frag_promo_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="@{promo == null ? View.GONE : View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/subs_status"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintEnd_toEndOf="@id/product_top"
                        app:layout_constraintBottom_toTopOf="@id/premium_guide"/>

                    <!-- Require premium to read. -->
                    <TextView
                        android:id="@+id/premium_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/premium_only"
                        android:layout_marginTop="16dp"
                        android:visibility="@{premiumFirst ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="@id/product_top"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintTop_toBottomOf="@id/frag_promo_box"
                        app:layout_constraintBottom_toTopOf="@id/product_top"/>

                    <!--  First product card  -->
                    <FrameLayout
                        android:id="@+id/product_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/premium_guide"
                        app:layout_constraintBottom_toTopOf="@id/product_bottom"/>

                    <!--  Second product card -->
                    <FrameLayout
                        android:id="@+id/product_bottom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintEnd_toEndOf="@id/product_top"
                        app:layout_constraintTop_toBottomOf="@+id/product_top"
                        app:layout_constraintBottom_toTopOf="@id/promo_terms"/>

                    <!-- Promo terms and conditions -->
                    <TextView
                        android:id="@+id/promo_terms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@{promo.terms}"
                        android:visibility="@{promo.terms == null ? View.GONE : View.VISIBLE}"
                        app:layout_constraintTop_toBottomOf="@id/product_bottom"
                        app:layout_constraintBottom_toTopOf="@id/frag_customer_service"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintEnd_toEndOf="@id/product_top"/>

                    <!-- Customer service-->
                    <FrameLayout
                        android:id="@+id/frag_customer_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/product_bottom"
                        app:layout_constraintStart_toStartOf="@id/product_top"
                        app:layout_constraintEnd_toEndOf="@id/product_top"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <include
            layout="@layout/progress_bar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
